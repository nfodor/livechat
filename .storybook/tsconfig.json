{
    "compilerOptions": {
        "baseUrl": "../src",
        "allowSyntheticDefaultImports": true,
        "module": "ES6",
        "target": "ES6",
        "lib": ["es5", "es6", "es7", "es2017", "dom"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "../src",
        "outDir": "dist",
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "typeRoots": ["../types", "../node_modules/@types"
            ,"./types", "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "**/*/*.test.ts",
        "examples"
    ]
}